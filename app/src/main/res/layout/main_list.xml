<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp"
    android:clickable="true"

    android:foreground="?android:attr/selectableItemBackground"

    android:layout_marginLeft="@dimen/main_default_space"
    android:layout_marginRight="@dimen/main_default_space"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >


    <ImageView
        android:id="@+id/main_item_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <TextView
            android:id="@+id/main_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical|center"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_margin="@dimen/main_default_space"
            android:text="@string/app_name"
            android:textSize="20sp"
            />

    </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
